@model Application.Analytics.CustomerAnalyticsResponse
@{
    var startDate = Model.DataPoints.FirstOrDefault()?.Date ?? DateTime.Now;
    var endDate = Model.DataPoints.LastOrDefault()?.Date ?? DateTime.Now;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Customer Analytics Report</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
            color: #333;
        }
        .header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 3px solid #F59E0B;
            padding-bottom: 20px;
        }
        .header h1 {
            color: #F59E0B;
            font-size: 28px;
            margin-bottom: 10px;
        }
        .header p {
            color: #666;
            font-size: 14px;
        }
        .summary {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            margin-bottom: 40px;
        }
        .summary-card {
            background: #F9FAFB;
            padding: 20px;
            border-radius: 8px;
            border-left: 4px solid #F59E0B;
        }
        .summary-card h3 {
            font-size: 14px;
            color: #666;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        .summary-card .value {
            font-size: 24px;
            font-weight: bold;
            color: #111;
        }
        .chart-section {
            margin-bottom: 40px;
        }
        .chart-section h2 {
            font-size: 18px;
            margin-bottom: 20px;
            color: #111;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
        }
        thead {
            background: #F59E0B;
            color: white;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #E5E7EB;
        }
        th {
            font-weight: 600;
            font-size: 14px;
        }
        td {
            font-size: 13px;
        }
        tbody tr:hover {
            background: #F9FAFB;
        }
        .footer {
            margin-top: 50px;
            text-align: center;
            font-size: 12px;
            color: #999;
            border-top: 1px solid #E5E7EB;
            padding-top: 20px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Customer Analytics Report</h1>
        <p>Period: @startDate.ToString("MMM dd, yyyy") - @endDate.ToString("MMM dd, yyyy")</p>
        <p>Generated: @DateTime.Now.ToString("MMM dd, yyyy HH:mm")</p>
    </div>

    <div class="summary">
        <div class="summary-card">
            <h3>Total Customers</h3>
            <div class="value">@Model.TotalCustomers</div>
        </div>
        <div class="summary-card">
            <h3>New Customers</h3>
            <div class="value">@Model.NewCustomers</div>
        </div>
        <div class="summary-card">
            <h3>Returning Customers</h3>
            <div class="value">@Model.ReturningCustomers</div>
        </div>
        <div class="summary-card">
            <h3>Average Customer Value</h3>
            <div class="value">$@Model.AverageCustomerValue.ToString("N2")</div>
        </div>
    </div>

    <div class="chart-section">
        <h2>Customer Acquisition by Period</h2>
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>New Customers</th>
                    <th>Returning Customers</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dataPoint in Model.DataPoints)
                {
                    <tr>
                        <td>@dataPoint.Date.ToString("MMM dd, yyyy")</td>
                        <td>@dataPoint.NewCustomers</td>
                        <td>@dataPoint.ReturningCustomers</td>
                        <td>@(dataPoint.NewCustomers + dataPoint.ReturningCustomers)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="footer">
        <p>SharpBuy Analytics Report - Confidential</p>
    </div>
</body>
</html>
